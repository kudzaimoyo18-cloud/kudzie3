        // ===== STATE =====
        let cart = [];
        let orderType = 'Delivery';
        let checkoutMode = false;
        const N8N_ORDERS_WEBHOOK = 'https://kudzi.app.n8n.cloud/webhook/faahmadeen-orders';
        const KITCHEN_STORAGE_KEY = 'kitchen_orders';
        const DELIVERY_FEE = 5;

        // ===== INIT =====
        document.addEventListener('DOMContentLoaded', () => {
            renderCategoryNav();
            renderMenu();
            loadCartFromStorage();
        });

        // ===== CATEGORY NAV =====
        function renderCategoryNav() {
            const nav = document.getElementById('categoryNav');
            nav.innerHTML = MENU.map((cat, i) =>
                `<button class="category-tab ${i === 0 ? 'active' : ''}" onclick="scrollToCategory('${cat.category}', this)">${cat.category}</button>`
            ).join('');
        }

        function scrollToCategory(category, btn) {
            const el = document.getElementById(`cat-${category.replace(/\s+/g, '-')}`);
            if (el) {
                const offset = 180;
                const y = el.getBoundingClientRect().top + window.scrollY - offset;
                window.scrollTo({ top: y, behavior: 'smooth' });
            }
            document.querySelectorAll('.category-tab').forEach(t => t.classList.remove('active'));
            if (btn) btn.classList.add('active');
        }

        // ===== RENDER MENU =====
        function renderMenu(filter = '') {
            const container = document.getElementById('menuContainer');
            const query = filter.toLowerCase().trim();

            let html = '';
            MENU.forEach(cat => {
                const items = query
                    ? cat.items.filter(item => item.name.toLowerCase().includes(query) || item.desc.toLowerCase().includes(query))
                    : cat.items;

                if (items.length === 0) return;

                html += `
                    <section class="category-section" id="cat-${cat.category.replace(/\s+/g, '-')}">
                        <h2 class="category-title">${cat.category}</h2>
                        <p class="category-subtitle">${cat.subtitle}</p>
                        <div class="menu-grid">
                            ${items.map(item => renderMenuItem(item)).join('')}
                        </div>
                    </section>
                `;
            });

            if (!html) {
                html = `<div style="text-align:center;padding:60px 20px;color:var(--text-muted);">
                    <div style="font-size:48px;margin-bottom:12px;">üîç</div>
                    <div>No items found for "${filter}"</div>
                </div>`;
            }

            container.innerHTML = html;
        }

        function renderMenuItem(item) {
            const inCart = cart.find(c => c.id === item.id);
            const qty = inCart ? inCart.quantity : 0;

            const tagHtml = item.tag
                ? `<div class="menu-item-tag ${item.tag === 'veg' ? 'veg' : ''}">${item.tag === 'veg' ? 'üåø Veg' : item.tag}</div>`
                : '';

            const actionHtml = qty > 0
                ? `<div class="qty-control">
                        <button class="qty-btn minus" onclick="event.stopPropagation(); updateCart('${item.id}', -1)">‚àí</button>
                        <span class="qty-value">${qty}</span>
                        <button class="qty-btn" onclick="event.stopPropagation(); updateCart('${item.id}', 1)">+</button>
                   </div>`
                : `<button class="add-btn" onclick="event.stopPropagation(); addToCart('${item.id}')">+</button>`;

            return `
                <div class="menu-item fade-in">
                    <div class="menu-item-img">
                        ${tagHtml}
                        ${item.emoji}
                    </div>
                    <div class="menu-item-body">
                        <div class="menu-item-name">${item.name}</div>
                        <div class="menu-item-desc">${item.desc}</div>
                        <div class="menu-item-footer">
                            <div class="menu-item-price">${item.price} <span>AED</span></div>
                            ${actionHtml}
                        </div>
                    </div>
                </div>
            `;
        }

        // ===== SEARCH =====
        function filterMenu() {
            const query = document.getElementById('searchInput').value;
            renderMenu(query);
        }

        // ===== ORDER TYPE =====
        function setOrderType(btn) {
            document.querySelectorAll('.order-type-option').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            orderType = btn.dataset.type;
            updateCartFooter();
        }

        // ===== CART =====
        function findMenuItem(id) {
            for (const cat of MENU) {
                const item = cat.items.find(i => i.id === id);
                if (item) return item;
            }
            return null;
        }

        function addToCart(itemId) {
            const item = findMenuItem(itemId);
            if (!item) return;

            const existing = cart.find(c => c.id === itemId);
            if (existing) {
                existing.quantity++;
            } else {
                cart.push({ id: item.id, name: item.name, price: item.price, quantity: 1 });
            }

            saveCartToStorage();
            renderMenu(document.getElementById('searchInput').value);
            renderCart();
            animateCartBadge();
        }

        function updateCart(itemId, delta) {
            const idx = cart.findIndex(c => c.id === itemId);
            if (idx === -1) return;

            cart[idx].quantity += delta;
            if (cart[idx].quantity <= 0) {
                cart.splice(idx, 1);
            }

            saveCartToStorage();
            renderMenu(document.getElementById('searchInput').value);
            renderCart();
        }

        function saveCartToStorage() {
            localStorage.setItem('fam_cart', JSON.stringify(cart));
        }

        function loadCartFromStorage() {
            const stored = localStorage.getItem('fam_cart');
            if (stored) {
                try { cart = JSON.parse(stored); } catch (e) { cart = []; }
            }
            renderCart();
        }

        function animateCartBadge() {
            const badge = document.getElementById('cartBadge');
            badge.classList.remove('bounce');
            void badge.offsetWidth;
            badge.classList.add('bounce');
        }

        function renderCart() {
            const body = document.getElementById('cartBody');
            const footer = document.getElementById('cartFooter');
            const formArea = document.getElementById('cartFormArea');
            const totalItems = cart.reduce((sum, c) => sum + c.quantity, 0);

            // Update badges
            document.getElementById('cartBadge').textContent = totalItems;
            document.getElementById('floatingCartCount').textContent = totalItems;

            const floatingCart = document.getElementById('floatingCart');
            if (totalItems > 0) {
                floatingCart.classList.add('visible');
            } else {
                floatingCart.classList.remove('visible');
            }

            if (cart.length === 0) {
                body.innerHTML = `
                    <div class="cart-empty">
                        <div class="cart-empty-icon">üõí</div>
                        <div>Your cart is empty</div>
                        <div style="font-size:13px;margin-top:8px;">Browse the menu and add items</div>
                    </div>`;
                footer.style.display = 'none';
                formArea.innerHTML = '';
                checkoutMode = false;
                return;
            }

            body.innerHTML = cart.map(item => `
                <div class="cart-item">
                    <div class="cart-item-info">
                        <div class="cart-item-name">${item.name}</div>
                        <div class="cart-item-price">${item.price} AED each</div>
                    </div>
                    <div class="cart-item-controls">
                        <div class="qty-control">
                            <button class="qty-btn minus" onclick="updateCart('${item.id}', -1)">‚àí</button>
                            <span class="qty-value">${item.quantity}</span>
                            <button class="qty-btn" onclick="updateCart('${item.id}', 1)">+</button>
                        </div>
                        <div class="cart-item-total">${item.price * item.quantity} AED</div>
                    </div>
                </div>
            `).join('');

            footer.style.display = 'block';
            updateCartFooter();

            if (checkoutMode) {
                showCheckoutForm();
            } else {
                formArea.innerHTML = '';
            }
        }

        function updateCartFooter() {
            const subtotal = cart.reduce((sum, c) => sum + c.price * c.quantity, 0);
            const deliveryFee = orderType === 'Delivery' ? DELIVERY_FEE : 0;
            const total = subtotal + deliveryFee;

            document.getElementById('cartSubtotal').textContent = `${subtotal} AED`;
            document.getElementById('cartDeliveryFee').textContent = deliveryFee > 0 ? `${deliveryFee} AED` : 'Free';
            document.getElementById('cartTotal').textContent = `${total} AED`;
            document.getElementById('floatingCartTotal').textContent = `${total} AED`;
        }

        function toggleCart() {
            const overlay = document.getElementById('cartOverlay');
            const sidebar = document.getElementById('cartSidebar');
            const isOpen = sidebar.classList.contains('open');

            if (isOpen) {
                overlay.classList.remove('open');
                sidebar.classList.remove('open');
            } else {
                overlay.classList.add('open');
                sidebar.classList.add('open');
            }
        }

        // ===== CHECKOUT =====
        function proceedToCheckout() {
            checkoutMode = true;
            showCheckoutForm();
        }

        function showCheckoutForm() {
            const formArea = document.getElementById('cartFormArea');
            const addressField = orderType === 'Delivery'
                ? `<div class="form-row">
                        <label>Delivery Address *</label>
                        <textarea id="custAddress" placeholder="Building, Street, Area..." required></textarea>
                   </div>`
                : '';

            formArea.innerHTML = `
                <div class="customer-form">
                    <div class="form-title">Customer Details</div>
                    <div class="form-row">
                        <label>Name *</label>
                        <input type="text" id="custName" placeholder="Your full name" required>
                    </div>
                    <div class="form-row">
                        <label>Phone *</label>
                        <input type="tel" id="custPhone" placeholder="+971 XX XXX XXXX" required>
                    </div>
                    ${addressField}
                    <div class="form-row">
                        <label>Notes (optional)</label>
                        <input type="text" id="custNotes" placeholder="Special instructions...">
                    </div>
                    <button class="checkout-btn" id="placeOrderBtn" onclick="placeOrder()">Place Order</button>
                </div>
            `;

            document.getElementById('checkoutBtn').style.display = 'none';
            formArea.scrollIntoView({ behavior: 'smooth' });
        }

        async function placeOrder() {
            const name = document.getElementById('custName')?.value.trim();
            const phone = document.getElementById('custPhone')?.value.trim();
            const address = document.getElementById('custAddress')?.value.trim() || 'N/A';
            const notes = document.getElementById('custNotes')?.value.trim() || '';

            if (!name || !phone) {
                alert('Please fill in your name and phone number.');
                return;
            }

            if (orderType === 'Delivery' && (!address || address === 'N/A')) {
                alert('Please provide a delivery address.');
                return;
            }

            const btn = document.getElementById('placeOrderBtn');
            btn.disabled = true;
            btn.textContent = 'Placing Order...';

            const subtotal = cart.reduce((sum, c) => sum + c.price * c.quantity, 0);
            const deliveryFee = orderType === 'Delivery' ? DELIVERY_FEE : 0;
            const total = subtotal + deliveryFee;
            const orderId = 'ORD-' + Date.now();

            const orderData = {
                orderId: orderId,
                orderType: orderType,
                items: cart.map(c => ({ name: c.name, quantity: c.quantity, price: c.price })),
                customer_name: name,
                phone: phone,
                address: address,
                notes: notes,
                total: total,
                timestamp: new Date().toISOString()
            };

            try {
                // 1. Send to kitchen dashboard via localStorage + BroadcastChannel
                sendToKitchen(orderData);

                // 2. Send to n8n webhook
                try {
                    await fetch(N8N_ORDERS_WEBHOOK, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ action: 'new_order', ...orderData })
                    });
                } catch (e) {
                    console.log('n8n webhook not reachable, order saved locally.');
                }

                // Success
                cart = [];
                saveCartToStorage();
                checkoutMode = false;
                renderCart();
                toggleCart();

                document.getElementById('orderRefDisplay').textContent = orderId;
                document.getElementById('successModal').classList.add('show');

            } catch (err) {
                console.error('Order failed:', err);
                alert('Failed to place order. Please try again.');
                btn.disabled = false;
                btn.textContent = 'Place Order';
            }
        }

        function sendToKitchen(orderData) {
            // Add to kitchen's localStorage directly
            let kitchenOrders = [];
            const stored = localStorage.getItem(KITCHEN_STORAGE_KEY);
            if (stored) {
                try { kitchenOrders = JSON.parse(stored); } catch (e) { kitchenOrders = []; }
            }

            kitchenOrders.unshift({
                ...orderData,
                status: 'new',
                receivedAt: new Date().toISOString()
            });

            localStorage.setItem(KITCHEN_STORAGE_KEY, JSON.stringify(kitchenOrders));

            // Also broadcast via BroadcastChannel
            try {
                const channel = new BroadcastChannel('kitchen_orders');
                channel.postMessage({ type: 'new_order', order: orderData });
                channel.close();
            } catch (e) {
                console.log('BroadcastChannel not supported');
            }
        }

        function closeModal() {
            document.getElementById('successModal').classList.remove('show');
        }

        // ===== INTERSECTION OBSERVER for category nav highlight =====
        const observerOptions = { rootMargin: '-200px 0px -60% 0px' };
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const id = entry.target.id.replace('cat-', '').replace(/-/g, ' ');
                    document.querySelectorAll('.category-tab').forEach(tab => {
                        tab.classList.toggle('active', tab.textContent.trim() === id);
                    });
                }
            });
        }, observerOptions);

        // Observe sections after render
        setTimeout(() => {
            document.querySelectorAll('.category-section').forEach(section => {
                observer.observe(section);
            });
        }, 100);
    </script>
</body>

</html>
